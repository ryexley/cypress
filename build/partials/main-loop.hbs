<ul class="featured-posts">
{{#foreach posts}}
    {{#if featured}}
    <li class="featured-post">
        <article class="{{post_class}}">
            <header>
                <a href="{{url}}"><h2 class="featured-post-title">{{title}}</h2></a>
            </header>
            <section class="featured-post-clip">
                <p>{{excerpt words="50"}}</p>
            </section>
            <footer class="featured-post-meta">
            </footer>
        </article>
    </li>
    {{/if}}
{{/foreach}}
</ul>
<ul class="post-stack">
{{#foreach posts}}
    <li class="post-card">
        <a href="{{url}}">
            <section class="post-card-header {{post_class}}" {{#if image}}style="background-image: url({{image}})"{{/if}}>
            </section>
            <section class="post-card-title-container">
                <h4 class="post-card-title">{{title}}</h4>
            </section>
        </a>
    </li>
{{/foreach}}
</ul>
