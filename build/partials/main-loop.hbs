<ul class="featured-posts">
{{#foreach posts}}
    {{#if featured}}
    <li class="featured-post">
        <article class="{{post_class}}">
            <header>
                <a href="{{url}}"><h2 class="featured-post-title">{{title}}</h2></a>
            </header>
            <section class="featured-post-clip">
                <p>{{excerpt words="50"}}... <a href="{{url}}"><em>keep reading</em></a></p>
            </section>
            <footer class="featured-post-meta">
            </footer>
        </article>
    </li>
    {{/if}}
{{/foreach}}
</ul>
<ul class="post-stack">
{{#foreach posts}}
    <li class="post-card {{post_class}}">
        <a href="{{url}}">
            <article {{#if image}}style="background-image: url({{image}})"{{/if}}>
                <section class="post-card-info">
                    <h4 class="post-card-title">{{title}}</h4>
                    {{#if tags}}
                    <section class="post-card-tags">
                        <ul class="post-card-tag-list">
                            <li class="post-card-tag-list-prefix">&#123;</li>
                            {{#foreach tags}}
                            <li class="post-card-tag" title="{{name}}">{{name}}</li>
                            {{/foreach}}
                            <li>&#125;</li>
                        </ul>
                    </section>
                    {{/if}}
                </section>
            </article>
        </a>
    </li>
{{/foreach}}
</ul>
{{pagination}}
